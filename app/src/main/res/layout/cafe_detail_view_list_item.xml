<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtCafeDetailNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="NickName"
                android:textSize="16sp" />

            <TextView
                android:paddingHorizontal="5dp"
                android:id="@+id/txtCafeDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="2022-01-01 01:01:01" />

            <ImageView
                android:id="@+id/imgCafeDetailCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera"
                android:backgroundTint="@color/black" />

        </LinearLayout>

        <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/ratingBarCafeDetailScore"
            android:paddingStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starWidth="18dp"
            app:srb_starHeight="18dp"
            app:srb_starPadding="2dp"
            app:srb_stepSize="0.5"
            app:srb_isIndicator="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp">

            <ImageView
                android:padding="5dp"
                android:id="@+id/imgCafeDetailImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_view_round_corner"
                android:src="@drawable/coffeezoo_logo" />

            <TextView
                android:paddingStart="5dp"
                android:id="@+id/txtCafeDetailComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="댓글내용" />

        </LinearLayout>

    </LinearLayout>

</layout>
